<% include _header %>
<div class="row">
    <div class="col-md-4 col-md-offset-4">
        <h1>Sign Up</h1>
        <%if(hasErrors){%>
            <div class="alert alert-danger">
                <%for(var i=0; i<messages.length; i++){%>
                    <p><%=messages[i]%></p>
                <%}%>
            </div>
        <%}%>
        <form action="/subscribe" method="post" enctype="multipart/form-data">
            <div class="form-group">
                <label for="personal_email">E-Mail</label>
                <input type="email" id="personal_email" name="personal_email" class="form-control">
            </div>
            <div class="form-group">
                <label for="password">Password</label>
                <input type="password" id="password" name="password" class="form-control">
            </div>
            <div class="form-group">
                <label for="fullname">Owner's Full Name</label>
                <input type="text" id="fullname" name="fullname" class="form-control">
            </div>
            <div class="form-group">
                <label for="business_name">Business Name</label>
                <input type="text" id="business_name" name="business_name" class="form-control">
            </div>
            <div class="form-group">
                <label for="address">Business Address</label>
                <input type="text" id="address" name="address" class="form-control">
            </div>
            <div class="form-group">
                <label for="business_emails">Business E-mail(s)</label>
                <input type="email" id="business_emails" name="business_emails" class="form-control" multiple>
            </div>
            <div class="form-group">
                <label for="business_description">Business Description</label>
                <input type="text" id="business_description" name="business_description" class="form-control">
            </div>
            <div class="form-group">
                <label for="associated_bank">Associated Bank</label>
                <input type="text" id="associated_bank" name="associated_bank" class="form-control">
            </div>
            <div class="form-group">
                <label for="business_website">Business Website</label>
                <input type="text" id="business_website" name="business_website" class="form-control">
            </div>
            <div class="form-group">
                <label for="business_logo">Business Logo</label>
                <input type="file" id="business_logo" name="business_logo" class="form-control">
            </div>
            <button type="submit" class="btn btn-primary">Sign Up</button>
        </form>
    </div>
</div>

<% include _footer %>